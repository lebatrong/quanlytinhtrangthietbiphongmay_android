<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--CHILD TITLE-->
    <TextView
        android:id="@+id/tvtitle_rclv"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:text="máy tính"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/colorblack"
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--TỔNG-->
        <TextView
            android:id="@+id/tvtong_rclv"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colortong"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorblack"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!--BÌNH THƯỜNG-->
        <TextView
            android:id="@+id/tvbinhthuong_rclv"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorbinhthuong"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorblack"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!--BÌNH THƯỜNG-->
        <TextView
            android:id="@+id/tvhu_rclv"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorhu"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>